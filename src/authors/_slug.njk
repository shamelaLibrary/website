---
pagination:
  data: authors
  size: 1
  alias: author
permalink: "authors/{{ author.id }}-{{ author.author | slug }}.html"
eleventyComputed:
  title: "{{ author.author }}"
---
{% extends "layouts/default.njk" %}

{% block head %}

    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">

{% endblock %}

{% block content %}

    <div class="h-100">
    
        <section class="h-100 d-flex justify-content-center align-items-center">
        
            <div class="text-center">
                <h1 style="font-size: 5em">{{ author.author }}</h1>
            </div>
        
        </section>

        <section id="table" class="h-100 d-flex justify-content-center flex-column">
        
            <h1 class="mb-2">الكتب</h1>

            <table class="display">
            
                <thead>
                    <tr>
                        <th>إسم الكتاب</th>
                        <th>التصنيف</th>
                    </tr>
                </thead>

                <tbody>
                    {% for book in books.by_author[author.author].books %}
                    <tr>
                        <td>
                            <a href="/books/{{ book.id }}-{{ book.title | slug }}.html">{{ book.title }}</a>
                        </td>
                        <td>
                            <a href="/categories/{{ book.category | slug }}.html">{{ book.category }}</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>

            </table>
        
        </section >
    
    </div>


{% endblock %}

{% block scripts %}

    <script src="/js/jquery.js"></script>

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>

        $(document).ready( () => $('#table > table').DataTable() );

    </script>

{% endblock %}