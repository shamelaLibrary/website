{% set title = "الصفحة الرئيسية" %}

{% extends "layouts/default.njk" %}

{% block head %}

    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">

{% endblock %}

{% block content %}

    <div class="h-100">
    
        <section class="h-100 d-flex justify-content-center align-items-center">
        
            <div class="text-center">
                <h1 style="font-size: 5em">الموسوعة الشاملة</h1>
                <h2 class="text-muted">أكثر من 7000 كتاب إلكتروني</h2>
            </div>
        
        </section>

        <section id="table" class="h-100 d-flex justify-content-center flex-column">
        
            <h1 class="mb-2">التصنيفات</h1>

            <table class="display">
            
                <thead>
                    <tr>
                        <th>الإسم</th>
                    </tr>
                </thead>

                <tbody>

                    {% for category in categories %}
                    <tr>
                        <td>
                            <a class="text-reset" href="/categories/{{ category.name | slug }}">{{ category.name }}</a>
                        </td>
                    </tr>
                    {% endfor %}

                </tbody>

            </table>
        
        </section >
    
    </div>


{% endblock %}

{% block scripts %}

    <script src="/js/jquery.js"></script>

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>

        $(document).ready( () => $('#table > table').DataTable() );

    </script>

{% endblock %}