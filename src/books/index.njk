{% set title = "جميع الكتب" %}

{% extends "layouts/default.njk" %}

{% block head %}

    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">

{% endblock %}

{% block content %}

    <div class="h-100">
    
        <section class="h-100 d-flex justify-content-center align-items-center">
        
            <div class="text-center">
                <h1 style="font-size: 5em">جميع الكتب</h1>
            </div>
        
        </section>

        <section id="table" class="h-100 d-flex justify-content-center flex-column">

            <table class="display">
            
                <thead>
                    <tr>
                        <th>إسم الكتاب</th>
                        <th>إسم الكاتب</th>
                        <th>تصنيف الكتاب</th>
                    </tr>
                </thead>

                <tbody>

                    {% for book in books.by_book %}
                    <tr>
                        <td>
                            <a class="text-reset" href="/books/{{ book.title | slug }}.html">{{ book.title }}</a>
                        </td>
                        <td>
                            <a class="text-reset" href="/authors/{{ books.by_author[book.author].id }}-{{ book.author | slug }}.html">{{ book.author }}</a>
                        </td>
                        <td>
                            <a class="text-reset" href="/categories/{{ book.category | slug }}.html">{{ book.category }}</a>
                        </td>
                    </tr>
                    {% endfor %}

                </tbody>

            </table>
        
        </section >
    
    </div>


{% endblock %}

{% block scripts %}

    <script src="/js/jquery.js"></script>

    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

    <script>

        $(document).ready( () => $('#table > table').DataTable() );

    </script>

{% endblock %}